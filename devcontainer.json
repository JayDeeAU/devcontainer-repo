{
    "name": "CoDemian Dev Container",
    "dockerComposeFile": [
        "docker-compose.yml",
        "docker-compose.override.yml"
    ],
    "service": "ide",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": ["alefragnani.project-manager",
            "batisteo.vscode-django",
            "bradlc.vscode-tailwindcss",
            "christian-kohler.npm-intellisense",
            "codezombiech.gitignore",
            "cweijan.dbclient-jdbc",
            "cweijan.vscode-postgresql-client2",
            "dbaeumer.vscode-eslint",
            "donjayamanne.git-extension-pack",
            "donjayamanne.githistory",
            "donjayamanne.python-environment-manager",
            "donjayamanne.python-extension-pack",
            "eamodio.gitlens",
            "esbenp.prettier-vscode",
            "formulahendry.docker-explorer",
            "github.copilot",
            "github.copilot-chat",
            "github.remotehub",
            "github.vscode-pull-request-github",
            "gruntfuggly.todo-tree",
            "henriquebruno.github-repository-manager",
            "kevinrose.vsc-python-indent",
            "magicstack.magicpython",
            "ms-azuretools.vscode-docker",
            "ms-edgedevtools.vscode-edge-devtools",
            "ms-ossdata.vscode-postgresql",
            "ms-python.autopep8",
            "ms-python.black-formatter",
            "ms-python.debugpy",
            "ms-python.python",
            "ms-python.vscode-pylance",
            "ms-vscode-remote.remote-containers",
            "ms-vscode-remote.remote-ssh",
            "ms-vscode-remote.remote-ssh-edit",
            "ms-vscode-remote.remote-wsl",
            "ms-vscode-remote.vscode-remote-extensionpack",
            "ms-vscode.azure-repos",
            "ms-vscode.makefile-tools",
            "ms-vscode.powershell",
            "ms-vscode.remote-explorer",
            "ms-vscode.remote-repositories",
            "ms-vscode.remote-server",
            "njpwerner.autodocstring",
            "postman.postman-for-vscode",
            "rvest.vs-code-prettier-eslint",
            "sourcegraph.cody-ai",
            "visualstudioexptteam.intellicode-api-usage-examples",
            "visualstudioexptteam.vscodeintellicode",
            "wholroyd.jinja",
            "ziyasal.vscode-open-in-github"]
            ,
            "settings": {
                "python.envFile": "${workspaceFolder}/${relativeFileDirname}/.env",
                "python.defaultInterpreterPath": "${workspaceFolder}/${relativeFileDirname}/.venv/bin/python",
                "python.analysis.extraPaths": [
                    "${workspaceFolder}/${relativeFileDirname}/.venv/lib/python3.12/site-packages"
                ],
                "python.formatting.provider": "black",
                "python.testing.pytestEnabled": true,
                "python.analysis.diagnosticSeverityOverrides": {
                    "reportMissingImports": "none"
                }
            }
        }
    },
    "remoteEnv": {
        "PROJECT_ROOT": "${localWorkspaceFolder}"
    },
    "postCreateCommand": "sh -c 'if [ ! -L .devcontainer/docker-compose.yml ]; then /share/DevelopmentProjects/.devcontainer/devcontainerlinks.sh /workspace; fi && sh .devcontainer/setup-ssh.sh && sh .devcontainer/setup_poetry.sh && sh .devcontainer/setup_pnpm.sh'",
    "remoteUser": "joe"
}